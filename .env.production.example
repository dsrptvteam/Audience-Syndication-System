# ===========================================
# Audience Syndication System - Production Environment Variables
# ===========================================
# Copy this file to your Vercel project environment variables
# or create a .env.local file for local development

# -------------------------------------------
# DATABASE (Supabase PostgreSQL)
# -------------------------------------------
# Connection pooler URL (use this for serverless)
DATABASE_URL=postgresql://postgres.[PROJECT_REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres

# Direct connection URL (for migrations only)
DIRECT_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres

# -------------------------------------------
# AUTHENTICATION (NextAuth.js)
# -------------------------------------------
# Your production URL (no trailing slash)
NEXTAUTH_URL=https://your-app.vercel.app

# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-here

# -------------------------------------------
# EMAIL SERVICE (Resend)
# -------------------------------------------
# Get from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxx

# Verified sender email domain
EMAIL_FROM=noreply@yourdomain.com

# -------------------------------------------
# META (Facebook) API
# -------------------------------------------
# Get from https://developers.facebook.com/
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret

# System user access token with ads_management permission
META_ACCESS_TOKEN=your-long-lived-access-token

# Ad account ID (format: act_XXXXXXXX)
META_AD_ACCOUNT_ID=act_your-ad-account-id

# Default audience ID (optional, can be set per client)
META_AUDIENCE_ID=your-default-audience-id

# Token creation date for refresh tracking
META_TOKEN_CREATED_AT=2025-01-01T00:00:00Z

# -------------------------------------------
# SECURITY
# -------------------------------------------
# 64-character hex string for encrypting SFTP passwords
# Generate with: openssl rand -hex 32
SFTP_ENCRYPTION_KEY=your-64-char-hex-encryption-key

# Bearer token for cron job authentication
# Generate with: openssl rand -base64 32
CRON_SECRET=your-cron-secret-here
